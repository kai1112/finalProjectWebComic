<title>Manage Manga Author Post</title>

<div>
</div>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">name</th>
      <th scope="col">avatar</th>
      <th scope="col">price</th>
      <th scope="col">author name</th>
      <th scope="col">action</th>
    </tr>
  </thead>
  <tbody>
    <% allManga.map((manga, index)=>{%>
      <tr>
        <th scope="row">
          <%=index + 1%>
        </th>
        <td>
          <%=manga.name%>
        </td>
        <td><img src="<%=manga.avatar%>" alt="" width="40px"></td>
        <td><input style="width: 70%" class="form-control" type="number" placeholder="input price" id="price"></td>
        <td>
          <% if(manga.author===listAuthor[index]?.id){%>
            <%= listAuthor[index].username%>
              <%}%>
        </td>
        <td>
          <% let classBtn=(manga.stautus==='review' ) ? 'outline-success' : 'success' %>
            <button class="btn btn-<%=classBtn%>" onclick="post('<%= manga._id%>')">
              <%= manga.stautus %>
            </button>
            <button class="btn btn-warning" onclick="edit('<%= manga._id%>', '<%= manga.stautus %>')">edit</button>
            <button class="btn btn-info" onclick="viewDetails('<%= manga._id%>')">view detail</button>
        </td>
      </tr>
      <%})%>


  </tbody>
</table>
