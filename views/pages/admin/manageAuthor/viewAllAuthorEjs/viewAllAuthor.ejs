  <div class="adminMenu">
    <%- include('../../../../components/adminMenu/adminMenu.ejs') %>
  </div>

  <div class="author-info">
    <div class="input-group mb-3">
      <input type="text" class="form-control" id="searchUser" placeholder="Search User" aria-label="Search User" aria-describedby="basic-addon2">
      <div class="input-group-append">
        <button onclick="searchUser()" class="btn btn-outline-secondary" type="button">search</button>
      </div>
    </div>
    <div class="pagination">
      <%- include('./paginationAuthor.ejs') %>
    </div>

    <% for(let i=1; i <=total; i++) {%>
      <button class="btn btn-primary" onclick="pagination('<%= i %>', 10)">
        <%= i %>
      </button>
      <%}%>
  </div>
</div>

