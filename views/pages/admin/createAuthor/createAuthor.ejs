<title>Create Author</title>
</head>

<body>
    <div class="wrapper-createAuthor">
        <div class="adminMenu">
            <%- include('../../../components/adminMenu/adminMenu.ejs') %>
        </div>

        <div class="container-Up">
            <div class="home-Up">
                <h1>Sign Up width Email</h1>
                <div class="menu-text">
                    <p class="quotes"></p>
                </div>
                <div class="menu-text-input">
                    <p class="title-Up">Author Email</p>
                    <input type="email" class="input" id="email" name="email" placeholder="input author email"></input>
                    <p class="title-Up">author name</p>
                    <input type="text" class="input" id="username" name="username"
                        placeholder="input author name"></input>
                    <p class="title-Up">author Password</p>
                    <input type="password" class="input" name="password" id="password"
                        placeholder="input author password"></input>
                    <p class="title-Up">date of birth</p>
                    <input type="date" name="date" class="input" id="dateOfBirth"></input>
                </div>
                <div class="menu-tex-button">
                    <button class="signUp" onclick="register()">register</button>
                </div>
            </div>
        </div>
    </div>
</body>
