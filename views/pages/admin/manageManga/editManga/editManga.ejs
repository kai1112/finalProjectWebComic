<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
</head>
<title>Edit Manga</title>

<div class="editManga">
  <div class="adminMenu">
    <%- include('../../../../components/adminMenu/adminMenu.ejs') %>
  </div>
  <div class="editManga-info">
    <div class="mainUserProfile">
      <h2>About manga edit</h2>
      <!-- name -->
      <div class="mainUserProfile__item">
        <div class="mainUserProfile__itemLeft">
          <h3>Name</h3>
          <p class="Name-span">
            <%= manga.name %>
          </p>
        </div>
        <div class="mainUserProfile__itemRight">
          <button class="btnEdit editName">Edit</button>
          <div class="buttonSet setEditName">
            <button class="btnSave saveName" onclick="ChangeName('<%= manga._id %>')">Save</button>
            <button class="btnCancel cancelName">Cancel</button>
          </div>
        </div>
      </div>
      <hr class="change-splitter">
      <!-- des -->
      <div class="mainUserProfile__item">
        <div class="mainUserProfile__itemLeft">
          <h3>description</h3>
          <p class="Des-span">
            <%= manga.description %>
          </p>
        </div>
        <div class="mainUserProfile__itemRight">
          <button class="btnEdit editDes">Edit</button>
          <div class="buttonSet setEditDes">
            <button class="btnSave saveDes" onclick="ChangeDes('<%= manga._id %>')">Save</button>
            <button class="btnCancel cancelDes">Cancel</button>
          </div>
        </div>
      </div>
      <hr class="change-splitter">

      <!-- avatar -->
      <div class="mainUserProfile__item">
        <div class="mainUserProfile__itemLeft">
          <h3>Avatar</h3>
          <form enctype="multipart/form-data" class="changeAvatar-form">
            <label for="change-avatar">Browse your Avatar</label>
            <input type="file" name="avatar" id="change-avatar" />
          </form>
        </div>
        <div class="mainUserProfile__itemCenter">
          <img class="preview-avatar" src="<%= manga.avatar %>" alt="">
        </div>
        <div class="mainUserProfile__itemRight">
          <button class="btnEdit editAvatar">Edit</button>
          <div class="buttonSet setEditAvatar">
            <button class="btnSave saveAvatar" onclick="ChangeAvatar('<%= manga._id %>')">Save</button>
            <button class="btnCancel cancelAvatar">Cancel</button>
          </div>
        </div>
      </div>
      <hr class="change-splitter">
      <hr style="border: 0;height:1px;background: rgba(0,0,0,0.15);">
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <link rel="stylesheet" href="/views/pages/admin/manageManga/editManga/editManga.css">
  <script src="/views/pages/admin/manageManga/editManga/editManga.js"></script>