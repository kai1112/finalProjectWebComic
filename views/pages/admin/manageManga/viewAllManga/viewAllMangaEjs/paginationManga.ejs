<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">name</th>
      <th scope="col">avatar</th>
      <th scope="col">price</th>
      <th scope="col">author name</th>
      <th scope="col">action</th>

    </tr>
  </thead>
  <tbody>
    <% allManga.map((manga, index)=>{%>
      <tr>
        <th scope="row">
          <%=index + 1%>
        </th>
        <td>
          <%=manga.name%>

        </td>
        <td><img src="<%=manga.avatar%>" alt="" width="60px"></td>
        <td>
          <%=manga.price%>
        </td>
        <td>
          <%= manga.author.username%>
        </td>
        <td>
          <button class="btn btn-warning" onclick="edit('<%= manga._id%>')">edit</button>
          <button class="btn btn-primary" onclick="viewDetails('<%= manga._id%>')">view detail</button>
          <button class="btn btn-danger" onclick="delette('<%= manga._id%>')">delete</button>
        </td>
      </tr>
      <%})%>
  </tbody>
</table>
