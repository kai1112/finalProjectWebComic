<div class="viewAllMangaAuthorPost" style="display: flex;">
    <div class="adminMenu">
        <%- include('../../../components/adminMenu/adminMenu.ejs') %>
    </div>

    <div class="mangaAuthor-post">
        <div>
            <button class="createBtn btn btn-outline-primary" onclick="authorCreateManga()">create manga</button>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">name</th>
                    <th scope="col">description</th>
                </tr>
            </thead>
            <tbody>
                <% category.map((category, index)=>{%>
                    <tr>
                        <th scope="row">
                            <%=index + 1%>
                        </th>
                        <td>
                            <%=category.name%>
                        </td>
                        <td>
                            <%=category.description%>
                        </td>

                    </tr>
                    <%})%>
            </tbody>
        </table>
    </div>
</div>
