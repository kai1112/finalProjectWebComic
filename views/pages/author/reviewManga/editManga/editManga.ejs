<title>Edit manga</title>
<div class="editManga">
  <div class="adminMenu">
    <%- include('../../../../components/authorMenu/authorMenu.ejs') %>
  </div>

  <div class="editManga-info">
    <form class="edit-form" action="" enctype="multipart/form-data">
      <div class="edit-form-left">
        <span>Description</span>
        <textarea class="form-control" type="text" name="description" id="description" placeholder="Description..." ><%=manga.description%></textarea>
          <br>
          <span>Price</span>
          <input class="form-control" type="number" value="<%=manga.price%>" name="price" id="price" placeholder="Price..." />
          <br>
          <button class="btn btn-primary" type="button" onclick="edit()">Submit</button>
      </div>
      <div class="edit-form-right">
        <label for="avatar">Choose avatar</label>
        <input type="file" name="avatar" id="avatar" placeholder="avatar" />
        <img class="preview-avatar" src="" alt="">
      </div>
    </form>
  </div>
</div>

